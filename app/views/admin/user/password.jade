extends ../layout

block content
  h2.page-header 修改密码

  form.form-password(method="post", action=action)
    != messages()
    label.sr-only(for="password") 新密码
    input#password-source.password.form-control(type="password", placeholder="新密码")
    input#password-target.password.form-control.hidden(name="password", type="password", placeholder="密码")
    label.sr-only(for="password") 确认密码
    input#confirm-source.confirm.form-control(type="password", placeholder="确认密码")
    input#confirm-target.confirm.form-control.hidden(name="confirm", type="password", placeholder="确认密码")
    button#password-submit.btn.btn-lg.btn-primary.btn-block(type="submit") 修改密码




block scripts
  script(src="/components/jquery/dist/jquery.min.js")
  script(src="/js/md5.min.js")
  script(src="/js/auth.min.js")
