extends ../layout

append css
  link(href="/components/font-awesome-4.7.0/css/font-awesome.min.css", rel="stylesheet")
  link(href="/css/admin.css", rel="stylesheet")

block main
  nav.navbar.navbar-inverse.navbar-fixed-top
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/", target="_blank") FareBlog 博客后台
      #navbar.navbar-collapse.collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href="/admin/user/logout")
              i.fa.fa-lock
              | &nbsp;注销
          li
            a(href="/admin/user/password")
              i.fa.fa-key
              | &nbsp;修改密码
  .container-fluid
    .row
      .col-sm-3.col-md-2.sidebar
        ul.nav.nav-sidebar
          li(class={active:pageName === "/admin/posts"})
            a(href="/admin/posts")
              i.fa.fa-files-o
              | &nbsp;文章列表
          li(class={active:pageName === "/admin/posts/add"})
            a(href="/admin/posts/add")
              i.fa.fa-file-o
              | &nbsp;添加文章
          li(class={active:pageName === "/admin/categories"})
            a(href="/admin/categories")
              i.fa.fa-th-list
              | &nbsp;分类列表
          li(class={active:pageName === "/admin/categories/add"})
            a(href="/admin/categories/add")
              i.fa.fa-plus
              | &nbsp;添加分类
      .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
        != messages()
        block content
